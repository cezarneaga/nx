{
  "private": true,
  "name": "lmwr",
  "description": "",
  "license": "",
  "scripts": {
    "build": "run-s build:*",
    "build:css": "npm run generate:css -- --minify",
    "build:remix": "npx remix build",
    "deploy": "wrangler publish",
    "dev": "npx remix build && run-p dev:*",
    "dev:remix": "npx remix watch",
    "dev:miniflare": "cross-env NODE_ENV=development miniflare ./build/index.js --watch",
    "dev:css": "npm run generate:css -- --watch",
    "generate:css": "npx tailwindcss -o ./app/styles/tailwind.css",
    "lint": "eslint --cache --cache-location ./.cache/eslint .",
    "validate": "run-p \"test -- --run\" lint typecheck",
    "start": "cross-env NODE_ENV=production miniflare ./build/index.js"
  },
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build"
  ],
  "dependencies": {
    "@reach/dialog": "^0.17.0",
    "@remix-run/cloudflare": "^1.6.4",
    "@remix-run/cloudflare-workers": "^1.6.4",
    "@remix-run/react": "^1.6.4",
    "isbot": "^3.5.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tiny-invariant": "^1.2.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.10.0",
    "@remix-run/dev": "^1.6.4",
    "@remix-run/eslint-config": "^1.6.4",
    "@types/node": "^18.0.0",
    "@types/react": "^18.0.14",
    "@types/react-dom": "^18.0.5",
    "autoprefixer": "^10.4.7",
    "cross-env": "^7.0.3",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "miniflare": "^2.4.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.14",
    "prettier": "2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.11",
    "tailwindcss": "^3.1.3",
    "typescript": "^4.7.4"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
